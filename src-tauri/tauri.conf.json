{
	"build": {
		"distDir": "../pokerogue/dist",
		"withGlobalTauri": true
	},
	"package": {
		"productName": "pokerogue",
		"version": "0.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false,
			"shell": {
				"all": false,
				"open": true
			}
		},
		"windows": [
			{
				"title": "PokeRogue",
				"width": 800,
				"height": 600
			}
		],
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "pokerogue",
			"icon": [
				"icons/32x32.png",
				"icons/128x128.png",
				"icons/128x128@2x.png",
				"icons/icon.icns",
				"icons/icon.ico"
			]
		}
	}
}